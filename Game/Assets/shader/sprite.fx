/*!
 * @brief	スプライト用のシェーダー。
 */

cbuffer cb : register(b0){
	float4x4 mvp;		//ワールドビュープロジェクション行列。
	float4 mulColor;    //乗算カラー
};
struct VSInput{
	float4 pos : SV_Position;
	float2 uv  : TEXCOORD0;
};

struct PSInput{
	float4 pos : SV_POSITION;
	float2 uv  : TEXCOORD0;
};

Texture2D<float4> colorTexture : register(t0);	//カラーテクスチャ。
sampler Sampler : register(s0);

PSInput VSMain(VSInput In) 
{
	PSInput psIn;
	psIn.pos = mul( mvp, In.pos );
	psIn.uv = In.uv;
	return psIn;
}
float4 PSMain( PSInput In ) : SV_Target0
{
//テクスチャカラーをそのまま返す。
	float4 color = colorTexture.Sample(Sampler, In.uv) * mulColor;
//セピア調(最後に割って調整)
	/*float4 R = 0.393f * color.r + 0.769f * color.b + 0.189f * color.b;
	float4 G = 0.349f * color.r + 0.686f * color.b + 0.168f * color.b;
	float4 B = 0.272f * color.r + 0.534f * color.b + 0.131f * color.b;
	color.r = R;
	color.g = G;
	color.b = B; 
	color /= 1.5f;*/
	return color;
}